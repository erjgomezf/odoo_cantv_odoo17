<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_cantv_inventory_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <div class="header">
                        <div class="row">
                            <div class="col-xs-6">
                                <img t-if="res_company.logo" t-att-src="image_data_uri(res_company.logo)" style="max-height: 80px;"/>
                            </div>
                            <div class="col-xs-6 text-right">
                                <span t-field="res_company.name"/><br/>
                                <span t-field="res_company.partner_id.street"/><br/>
                                <span t-field="res_company.partner_id.city"/><br/>
                                <span t-field="res_company.partner_id.state_id.name"/><br/>
                                <span t-field="res_company.partner_id.country_id.name"/>
                            </div>
                        </div>
                        <br/>
                        <div class="text-center">
                            <h3>INVENTARIO DE MATERIALES / EQUIPOS DEL DEPÓSITO <t t-if="env.context.get('location_name')"><span t-esc="env.context.get('location_name')"/></t></h3>
                            <h3>CONTROL DE INVENTARIO DE MATERIALES Y EQUIPOS DE LA GERENCIA RED TRONCAL Y TRANSPORTE</h3>
                            <h4>Gerencia General Proyectos Mayores</h4>
                            <h4>Gerencia Programa Redes de Acceso</h4>
                        </div>
                    </div>

                    <div class="oe_structure"/>
                    <div class="row mt32 mb32">
                        <div class="col-xs-12">
                            <table class="table table-condensed table-bordered o_main_table">
                                <thead>
                                    <tr>
                                        <th class="text-left">DESCRIPCIÓN DEL MATERIAL</th>
                                        <th class="text-left">UM</th>
                                        <th class="text-left">MARCA</th>
                                        <th class="text-left">MODELO</th>
                                        <th class="text-left">SERIAL</th>
                                        <th class="text-left">CÓDIGO DE MATERIAL SIR</th>
                                        <th class="text-left">COD INVENTARIO SAP</th>
                                        <th class="text-left">OBSERVACION</th>
                                        <th class="text-left">UBICACIÓN</th>
                                        <th class="text-right">INICIAL</th>
                                        <th class="text-right">ENTREGADO</th>
                                        <th class="text-right">DISPONIBLE</th>
                                        <th class="text-right">ALMACEN TRANSITORIO</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <t t-foreach="env['stock.quant'].search([
                                        ('quantity', '>', 0),
                                        ('location_id', 'child_of', env.context.get('location_id', 0))
                                    ])" t-as="quant">
                                        <tr>
                                            <td><span t-field="quant.product_tmpl_id.name"/></td>
                                            <td><span t-field="quant.product_tmpl_id.uom_id.name"/></td>
                                            <td><span t-field="quant.product_tmpl_id.cantv_brand"/></td>
                                            <td><span t-field="quant.product_tmpl_id.cantv_model"/></td>
                                            <td><span t-field="quant.lot_id.name"/></td>
                                            <td><span t-field="quant.product_tmpl_id.cantv_material_sir_code"/></td>
                                            <td><span t-field="quant.product_tmpl_id.cantv_sap_code"/></td>
                                            <td></td>
                                            <td><span t-field="quant.location_id.display_name"/></td>
                                            <td></td>
                                            <td></td>
                                            <td class="text-right"><span t-field="quant.quantity"/></td>
                                            <td></td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </t>
        </t>
    </template>
</odoo>
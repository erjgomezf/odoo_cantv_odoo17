<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_cantv_inventory_template">
        <t t-call="web.html_container">
            <t t-set="report_context" t-value="json.loads(env.context.get('data', '{}'))"/>
            <t t-set="location_id" t-value="report_context.get('location_id')"/>
            <t t-set="location_name" t-value="report_context.get('location_name')"/>

            <t t-call="web.external_layout">
                <div class="page">
                    <h2 class="text-center">CONTROL DE INVENTARIO DE MATERIALES Y EQUIPOS DEL ALMACÉN: <span t-esc="location_name"/></h2>
                    <br/>
                    <table class="table table-bordered o_main_table">
                        <thead>
                            <tr>
                                <th>Descripción del Material</th>
                                <th>UM</th>
                                <th>Marca</th>
                                <th>Modelo</th>
                                <th>Serial</th>
                                <th>Código Material SIR</th>
                                <th>Cod. Inventario / SAP</th>
                                <th>Ubicación</th>
                                <th class="text-right">Disponible</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="env['stock.quant'].search([('location_id', '=', location_id), ('quantity', '&gt;', 0), ('product_id.is_cantv_asset', '=', True)])" t-as="quant">
                                <tr>
                                    <td><span t-field="quant.product_id.name"/></td>
                                    <td><span t-field="quant.product_uom_id.name"/></td>
                                    <td><span t-field="quant.product_id.cantv_brand"/></td>
                                    <td><span t-field="quant.product_id.cantv_model"/></td>
                                    <td><span t-field="quant.product_id.cantv_serial_number"/></td>
                                    <td><span t-field="quant.product_id.cantv_material_sir_code"/></td>
                                    <td><span t-field="quant.product_id.cantv_sap_code"/></td>
                                    <td><span t-field="quant.location_id.display_name"/></td>
                                    <td class="text-right"><span t-field="quant.quantity"/></td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
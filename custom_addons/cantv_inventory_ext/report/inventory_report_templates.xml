<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="report_cantv_inventory_template">
        <t t-call="web.html_container">
            <t t-call="web.external_layout">
                <div class="page">
                    <h2 class="text-center">
                        Reporte de Inventario por Almacén
                    </h2>
                    <p>
                        <strong>Ubicación:</strong>
                        <t t-esc="doc.get('location_name')"/>
                    </p>

                    <table class="table table-sm table-bordered" style="width: 100%; font-size: 12px;">
                        <thead>
                            <tr>
                                <th>Producto</th>
                                <th>Referencia Interna</th>
                                <th>Unidad de Medida</th>
                                <th>Cantidad Disponible</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-set="quants" t-value="env['stock.quant'].search([('location_id', '=', doc.get('location_id'))])"/>
                            <t t-foreach="quants" t-as="quant">
                                <tr>
                                    <td><span t-field="quant.product_id.display_name"/></td>
                                    <td><span t-field="quant.product_id.default_code"/></td>
                                    <td><span t-field="quant.product_uom_id.name"/></td>
                                    <td class="text-right">
                                        <span t-field="quant.quantity"/>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </table>
                </div>
            </t>
        </t>
    </template>
</odoo>
